#include "holberton.h"

/**
 * puts_half - prints second half of a string
 * @str: String to be partially printed
 */

void puts_half(char *str)
{
	int length;
	int half;
	int i;

	for (length = 0; str[length]; length++)
	{}
	if (length % 2 == 0)
	{
		for (half = length / 2; i <= length; half++)
		{
			_putchar(str[i]);
			_putchar(i + '0');
		}
	}
}
