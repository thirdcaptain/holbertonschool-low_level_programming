#include "holberton.h"

/**
 * puts2 - prints one char out of 2 of a string
 * @str: string to be printed
 */

void puts2(char *str)
{
	int counter;
	int length;

	for (counter = 0; str[counter]; counter++)
	{}
	for (length = counter - 1; str[length]; length--)
	{
		_putchar(str[length]);
		length--;
	}
	_putchar('\n');
}
